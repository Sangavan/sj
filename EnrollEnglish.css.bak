/* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

header {
    background-color: #333;
    color: #fff;
    padding: 20px;
}

nav {
    text-align: center;
}

nav a {
    color: #fff;
    text-decoration: none;
    padding: 10px 20px;
}

nav a:hover {
    background-color: #555;
}

.container {
    max-width: 1200px;
    margin: 20px auto;
    padding: 0 20px;
}

footer {
    background-color: #333;
    color: #fff;
    padding: 50px 0;
}

.footer-content {
    display: flex;
    justify-content: space-around;
}

.footer-column {
    flex: 1;
    padding: 0 20px;
}

.footer-column h3 {
    margin-bottom: 20px;
}

.footer-column p {
    margin-bottom: 10px;
}

.social-media {
    display: flex;
    justify-content: center;
}

.social-media a {
    margin: 0 10px;
}

.social-media img {
    width: 30px;
    height: 30px;
}

.enrollment-form {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 5px;
}

.enrollment-form label {
    display: block;
    margin-bottom: 10px;
    font-weight: bold;
}

.enrollment-form input[type="text"],
.enrollment-form input[type="email"],
.enrollment-form input[type="tel"],
.enrollment-form textarea,
.enrollment-form select {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
}

.enrollment-form input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
}

.enrollment-form input[type="submit"]:hover {
    background-color: #0056b3;
}

/* Section Styles */
.enroll-now-section {
    margin-top: 50px;
    text-align: center;
}

.enroll-now-section h2 {
    margin-bottom: 20px;
}

.enroll-now-section p {
    margin-bottom: 30px;
    font-size: 1.2em;
}
