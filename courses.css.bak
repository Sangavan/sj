/* Option Styles */


.option {
    display: inline-block;
    margin: 20px;
    text-align: center;
	padding: 10px 20px;
}

.option a {
    text-decoration: none;
    color: inherit;
}

.option img {
    width: 200px;
    height: 200px;
    border-radius: 10%;
    border: 2px solid #007bff; /* Added border for visual appeal */
    transition: transform 0.3s ease; /* Added transition for hover effect */
}

.option img:hover {
    transform: scale(1.1); /* Scale image on hover */
}

.option p {
    font-size: 1.2em;
    margin-top: 10px;
}
